<!-- newsfeed.hbs -->
{{#each news}}
<section class="news-item" data-id="{{this._id}}" data-title="{{this.title}}" data-description="{{this.description}}" data-creator="{{this.creator}}" data-pubdate="{{this.pubDate}}" data-image="{{this.image_url}}" data-link="{{this.link}}">
    <img src="{{this.image_url}}" alt="News Image">
    <div class="news-content">
        <h3>
            <a href="{{this.link}}" class="news-title" target="_blank">{{this.title}}</a>
        </h3>
        <p>{{this.description}}</p>
    </div>
</section>
{{/each}}
